
<%- include ('./partials/header') %>




<%if(letters.length!=0){%>
  <%
  countries={}
  <!-- console.log(countries) -->
  countryLetters.forEach((letter)=>{
    country=letter.to
    <!-- console.log(country) -->
    if(countries[country] !=undefined){
      countries[country]= countries[country]+1
    }else{
      countries[country]=1
    }
  })
  %>
  
  <div class="b"><h2>We all are in this together <i class="fa fa-heart" style="font-size:30px;color:red"></i></h2></div>

