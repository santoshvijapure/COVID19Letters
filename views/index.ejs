  <div class="card-columns">
    <% letters.forEach((letter)=>{ %>
      <div class="card bg-light">
           
          <div class="card-body text-left">
          <p class="card-text">
            <%= letter.content.substring(0,100) %> ....
          </p>
          <a class="btn btn-primary "  href="/show/<%= letter._id%>">read more </a>
          </div>
          </div>
    <% }) %>
  </div>
</div>
<%}else{%>
